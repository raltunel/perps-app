{
    "$schema": "https://json.schemastore.org/package.json",
    "name": "@perps-app/frontend",
    "version": "0.5.3-Jan-21",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vite build && node netlify/prepare.js",
        "build:netlify": "pnpm test:ci && pnpm run --parallel \"/^prebuild:.*/\" && pnpm build",
        "build:prod": "vite build",
        "dev": "cross-env NODE_ENV=development PORT=3002 node ./dev-server.js",
        "perp": "cross-env NODE_ENV=development PORT=3002 node ./dev-server.js",
        "perps": "cross-env NODE_ENV=development PORT=3002 node ./dev-server.js",
        "prod": "pnpm build:prod && cross-env NODE_ENV=production PORT=3002 node ./prod-server.js",
        "start": "netlify serve",
        "typecheck": "tsc",
        "prebuild:announcements": "node scripts/generate-announcements.js",
        "prebuild:version": "node scripts/write-version.js",
        "prebuild:tv": "node scripts/copy-tv.js",
        "predev": "node scripts/copy-tv.js",
        "prestart": "node scripts/copy-tv.js",
        "lint": "eslint app --ext .js,.jsx,.ts,.tsx",
        "lint:fix": "eslint app --ext .js,.jsx,.ts,.tsx --fix",
        "generate-pwa-assets": "pwa-assets-generator",
        "test": "vitest",
        "test:ci": "vitest run"
    },
    "dependencies": {
        "@crocswap-libs/ambient-ember": "^0.1.59",
        "@fogo/sessions-idls": "^0.1.2",
        "@fogo/sessions-sdk": "^0.1.3",
        "@fogo/sessions-sdk-react": "^0.1.15",
        "@fuul/sdk": "^7.14.0",
        "@perps-app/sdk": "workspace:*",
        "@plausible-analytics/tracker": "0.4.4",
        "@pythnetwork/hermes-client": "^2.1.0",
        "@solana/web3.js": "^1.98.4",
        "compression": "^1.8.1",
        "d3": "^7.9.0",
        "d3fc": "^15.2.13",
        "express": "^5.2.1",
        "html2canvas": "^1.4.1",
        "framer-motion": "^12.29.0",
        "i18next": "^25.8.0",
        "i18next-browser-languagedetector": "^8.2.0",
        "isbot": "^5.1.33",
        "isomorphic-fetch": "^3.0.0",
        "re-resizable": "^6.11.2",
        "react": "^19.2.3",
        "react-dom": "^19.2.3",
        "react-helmet-async": "^2.0.5",
        "react-i18next": "^16.5.3",
        "react-icons": "^5.5.0",
        "react-router": "^7.12.0",
        "zustand": "^5.0.10"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@react-router/dev": "^7.12.0",
        "@types/express": "^5.0.6",
        "@types/node": "24.10.1",
        "@types/react": "^19.2.9",
        "@types/react-dom": "^19.2.3",
        "@typescript-eslint/eslint-plugin": "^8.53.1",
        "@typescript-eslint/parser": "^8.53.1",
        "@vite-pwa/assets-generator": "^1.0.2",
        "cross-env": "^10.1.0",
        "eslint": "^9.39.2",
        "eslint-plugin-react": "^7.37.5",
        "fs-extra": "^11.3.3",
        "terser": "^5.46.0",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.53.1",
        "vite": "^7.3.1",
        "vite-plugin-node-polyfills": "^0.24.0",
        "vite-plugin-pwa": "^1.2.0",
        "vite-tsconfig-paths": "^5.1.4",
        "vitest": "^4.0.17"
    }
}
